{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@screens": ["./src/screens"],
      "@components": ["./src/components"],
      "@hooks": ["./src/hooks"],
      "types": ["./types"],
      "assets": ["./src/assets"]
    }
  },
  "exclude": [
    "./node_modules",
    "../node_modules",
    "node_modules",
    "babel.config.js"
  ]
}
